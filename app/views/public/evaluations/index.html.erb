<div class="container">
  <h1>みんなの投稿一覧</h1>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>曲名</th>
        <th>ポイント</th>
        <th>感想</th>
      </tr>
    </thead>
    <tbody class="tbody-striped">
      <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.music_title %></td>
        <td><%= evaluation.point %></td>
        <td><%= evaluation.evaluation %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

