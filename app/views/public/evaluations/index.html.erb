<div class="container">
  <h1>みんなの投稿</h1>


  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>曲名</th>
        <th>ポイント</th>
        <th>感想</th>
        <th>投稿者</th>
        <th></th>
      </tr>
    </thead>

    <tbody class="table table-striped">
      <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.music_title %></td>
        <td><%= evaluation.point %></td>
        <td><%= evaluation.evaluation %></td>
        <td><%= evaluation.user.name %></td>
        <td><%= link_to "詳細を見る", public_evaluation_path(evaluation.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>

