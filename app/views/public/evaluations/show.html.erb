<div class="container">
  <h1>投稿詳細</h1>

      <p>曲名</p>
      <%= @evaluation.music_title %>

      <p>ポイント</p>
      <%= @evaluation.point %>

      <p>感想</p>
      <%= @evaluation.evaluation %>

      <% if @evaluation.user_id = current_user.id %>
      <p><%= link_to "編集する", edit_public_evaluation_path(@evaluation.id) %></p>
      <p><%= link_to "削除する", public_evaluation_path(@evaluation.id), method: :delete ,"data-confirm" =>"本当に削除しますか?"%></p>
      <% end %>

  </div>